<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.LaunchFragment">

    <ProgressBar
        android:id="@+id/fragment_launch_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/fragment_launch_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/ping_error_text"
        android:textAlignment="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/fragment_launch_retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_launch_error_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="@string/retry_button"
        android:visibility="gone" />

</RelativeLayout>